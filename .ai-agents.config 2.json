{
  "version": "1.0.0",
  "project": "wheels-wins-landing-page",
  "agents": {
    "bugDetection": {
      "codium": {
        "enabled": true,
        "apiKey": "${CODIUM_API_KEY}",
        "features": {
          "autoReview": true,
          "testGeneration": true,
          "docstrings": true,
          "complexity": true
        },
        "ignore": ["node_modules", "dist", "build", ".next"]
      },
      "snyk": {
        "enabled": true,
        "token": "${SNYK_TOKEN}",
        "severity": "low",
        "autoFix": true,
        "monitor": true,
        "testFrequency": "daily"
      },
      "sonarLint": {
        "enabled": true,
        "rules": {
          "javascript": "recommended",
          "typescript": "recommended",
          "python": "recommended"
        },
        "exclude": ["**/*.test.*", "**/*.spec.*"]
      }
    },
    "security": {
      "semgrep": {
        "enabled": true,
        "rules": ["auto", "security", "performance"],
        "config": [
          "p/security-audit",
          "p/react",
          "p/typescript",
          "p/python",
          "p/fastapi"
        ],
        "exclude": ["test", "docs", "scripts"]
      },
      "gitguardian": {
        "enabled": true,
        "apiKey": "${GITGUARDIAN_API_KEY}",
        "preCommitHook": true,
        "scanHistory": false,
        "ignoreKnownSecrets": true
      },
      "bearer": {
        "enabled": true,
        "rules": ["CWE-Top25", "OWASP-Top10"],
        "reportFormat": "json",
        "dataflow": true
      }
    },
    "ui": {
      "v0": {
        "enabled": true,
        "apiKey": "${VERCEL_V0_API_KEY}",
        "framework": "react",
        "styling": "tailwind",
        "components": "radix-ui",
        "outputDir": "src/components/generated"
      },
      "locofy": {
        "enabled": true,
        "apiKey": "${LOCOFY_API_KEY}",
        "projectId": "${LOCOFY_PROJECT_ID}",
        "framework": "react",
        "responsive": true,
        "optimizeCode": true
      },
      "componentsAI": {
        "enabled": true,
        "theme": {
          "colors": "from-tailwind",
          "typography": "from-tailwind",
          "spacing": "from-tailwind"
        }
      }
    },
    "documentation": {
      "mintlify": {
        "enabled": true,
        "apiKey": "${MINTLIFY_API_KEY}",
        "autoGenerate": true,
        "format": "markdown",
        "outputDir": "docs/generated",
        "sections": [
          "api",
          "components",
          "hooks",
          "services",
          "utils"
        ]
      },
      "swimm": {
        "enabled": true,
        "workspace": "${SWIMM_WORKSPACE}",
        "autoSync": true,
        "codeWalkthrough": true
      },
      "dokumentor": {
        "enabled": true,
        "format": ["markdown", "html"],
        "includeExamples": true,
        "generateReadme": false
      }
    },
    "api": {
      "postman": {
        "enabled": true,
        "collection": "wheels-wins-api",
        "environment": "development",
        "autoSync": true,
        "generateTests": true
      },
      "newman": {
        "enabled": true,
        "reporters": ["cli", "json", "html"],
        "bail": false,
        "insecure": false
      }
    },
    "database": {
      "supabase": {
        "enabled": true,
        "projectRef": "${SUPABASE_PROJECT_REF}",
        "migrations": "supabase/migrations",
        "seed": "supabase/seed.sql",
        "types": "src/types/supabase.ts"
      },
      "prisma": {
        "enabled": false,
        "note": "Project uses Supabase, Prisma disabled"
      }
    },
    "testing": {
      "autoGenerateTests": true,
      "coverage": {
        "target": "80%",
        "branches": "75%",
        "functions": "80%",
        "lines": "80%",
        "statements": "80%"
      },
      "frameworks": {
        "unit": "vitest",
        "integration": "vitest",
        "e2e": "playwright",
        "api": "newman"
      },
      "ai": {
        "generateMissing": true,
        "improveExisting": true,
        "mockGeneration": true,
        "edgeCases": true
      }
    },
    "devops": {
      "pulumi": {
        "enabled": false,
        "note": "Using Netlify + Render for deployment"
      },
      "monitoring": {
        "sentry": {
          "enabled": true,
          "dsn": "${SENTRY_DSN}",
          "environment": "development",
          "tracesSampleRate": 0.1
        }
      }
    },
    "ai": {
      "codeGeneration": {
        "enabled": true,
        "review": true,
        "style": "project-convention"
      },
      "codeReview": {
        "enabled": true,
        "autoSuggest": true,
        "securityFocus": true,
        "performanceFocus": true
      },
      "refactoring": {
        "enabled": true,
        "suggest": true,
        "dryPrinciple": true,
        "solidPrinciples": true
      }
    }
  },
  "workflows": {
    "preCommit": {
      "enabled": true,
      "hooks": [
        "gitguardian",
        "semgrep",
        "eslint",
        "prettier",
        "type-check"
      ]
    },
    "preMerge": {
      "enabled": true,
      "checks": [
        "tests",
        "coverage",
        "security",
        "documentation"
      ]
    },
    "scheduled": {
      "daily": ["snyk", "dependency-updates"],
      "weekly": ["full-security-scan", "performance-audit"]
    }
  },
  "integrations": {
    "vscode": {
      "extensions": [
        "Codium.codiumai",
        "snyk-security.snyk-vulnerability-scanner", 
        "SonarSource.sonarlint-vscode",
        "Semgrep.semgrep",
        "mintlify.document",
        "Swimm.swimm",
        "Postman.postman-for-vscode"
      ],
      "settings": {
        "codium.autoSuggest": true,
        "snyk.autoScan": true,
        "sonarLint.autoTrigger": true
      }
    },
    "ci": {
      "github": {
        "actions": true,
        "secretScanning": true,
        "dependabot": true
      }
    }
  },
  "priorities": {
    "pam": {
      "focus": "high",
      "areas": [
        "response-quality",
        "context-awareness",
        "performance",
        "security"
      ]
    },
    "frontend": {
      "focus": "medium",
      "areas": [
        "component-testing",
        "accessibility",
        "performance"
      ]
    },
    "backend": {
      "focus": "high",
      "areas": [
        "api-security",
        "rate-limiting",
        "error-handling"
      ]
    }
  }
}