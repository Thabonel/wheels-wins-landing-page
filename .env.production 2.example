# =====================================================
# WHEELS & WINS PRODUCTION ENVIRONMENT CONFIGURATION
# =====================================================
# Last Updated: 2025-01-08
# Version: 1.0.0
# 
# IMPORTANT: Copy this file to .env.production and fill in your values
# Never commit .env.production to version control
# =====================================================

# =====================================================
# CORE CONFIGURATION (REQUIRED)
# =====================================================

# OpenAI Configuration (Required for AI features)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=2000

# Anthropic Configuration (Optional - for Claude integration)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-opus-20240229

# Supabase Configuration (Required)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_anon_key_here

# Database Configuration
DATABASE_URL=postgresql://user:password@host:5432/database
READ_REPLICA_URL=postgresql://user:password@read-host:5432/database

# =====================================================
# FEATURE FLAGS
# =====================================================

# PAM AI Features
PAM_ENABLED=true
PAM_CACHE_ENABLED=true
PAM_LEARNING_ENABLED=false  # Enable when machine learning is ready
PAM_PROACTIVE_ENABLED=false  # Enable when proactive features are tested
PAM_VOICE_ENABLED=true
PAM_FUNCTION_CALLING_ENABLED=true

# Security Features
SECURITY_ENHANCED_MODE=true
SECURITY_RATE_LIMITING=true
SECURITY_MESSAGE_VALIDATION=true

# =====================================================
# SERVICE CONFIGURATION
# =====================================================

# TTS (Text-to-Speech) Configuration
TTS_ENABLED=true
TTS_PRIMARY_ENGINE=edge
TTS_FALLBACK_ENABLED=true
TTS_VOICE_DEFAULT=en-US-AriaNeural
TTS_CACHE_ENABLED=true

# WebSocket Configuration
WEBSOCKET_ENABLED=true
WEBSOCKET_MAX_CONNECTIONS=1000
WEBSOCKET_CONNECTION_TIMEOUT=300
WEBSOCKET_PING_INTERVAL=30
WEBSOCKET_MAX_MESSAGE_SIZE=65536

# Voice Configuration
VOICE_ENABLED=true
VOICE_RATE_LIMIT=10
VOICE_MAX_DURATION=60

# =====================================================
# EXTERNAL APIs (Optional but Recommended)
# =====================================================

# Google Services
GOOGLE_PLACES_API_KEY=your_google_places_key_here
YOUTUBE_API_KEY=your_youtube_api_key_here
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_key_here

# Mapbox Configuration
VITE_MAPBOX_PUBLIC_TOKEN=pk.your_mapbox_public_token_here
MAPBOX_SECRET_TOKEN=sk.your_mapbox_secret_token_here

# =====================================================
# CACHING & STORAGE
# =====================================================

# Redis Configuration
REDIS_ENABLED=true
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password_here
REDIS_CACHE_TTL=300

# =====================================================
# MONITORING & LOGGING
# =====================================================

# Sentry Error Tracking
SENTRY_ENABLED=true
SENTRY_DSN=https://your_key@sentry.io/project_id
SENTRY_ENVIRONMENT=production

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# =====================================================
# DEPLOYMENT CONFIGURATION
# =====================================================

# Application Settings
NODE_ENV=production
APP_NAME="Wheels & Wins"
APP_URL=https://wheelswins.com
APP_PORT=8000

# Frontend Build Settings
VITE_APP_NAME="Wheels & Wins"
VITE_APP_URL=https://wheelswins.com
VITE_API_URL=https://api.wheelswins.com

# Backend Settings
BACKEND_URL=https://api.wheelswins.com
BACKEND_PORT=8000